            --xcode-string: #ff8170;
            --xcode-number: #d0bf69;
            --xcode-comment: #6c7986;
            --xcode-func: #6be5fd;
            --xcode-line-num: #5c6370;
            --xcode-error-bg: #4b1818;
            --xcode-error-border: #ff3b30;
        }
        body {
            background-color: #1e1f24;
            color: var(--xcode-text);
            font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
            margin: 0;
            padding: 0;
        }
        .snippet-container {
            position: relative;
            background-color: var(--xcode-bg);
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        }
        .snippet-fade-top {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 40px;
            background: linear-gradient(to bottom, var(--xcode-bg), transparent);
            z-index: 10;
            pointer-events: none;
        }
        .snippet-fade-bottom {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 40px;
            background: linear-gradient(to top, var(--xcode-bg), transparent);
            z-index: 10;
            pointer-events: none;
        }
        .code-block {
            padding: 24px 0;
            font-family: 'SF Mono', 'Fira Code', monospace;
            font-size: 14px;
            line-height: 1.6;
            overflow-x: auto;
        }
        .code-line {
            display: flex;
            padding: 0 24px;
            position: relative;
        }
        .code-line.error-highlight {
            background-color: var(--xcode-error-bg);
            z-index: 5;
        }
        .code-line.error-highlight::after {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background-color: var(--xcode-error-border);
        }
        .line-number {
            width: 40px;
            text-align: right;
            padding-right: 20px;
            color: var(--xcode-line-num);
            user-select: none;
        }
        .line-content {
            white-space: pre;
            color: #d1d1d1;
        }
        .stack-item {
            border-left: 2px solid rgba(255, 255, 255, 0.05);
            transition: all 0.2s;
        }
        .stack-item:hover {
            border-left-color: var(--xcode-func);
            background: rgba(255, 255, 255, 0.02);
        }
    </style>
</head>
